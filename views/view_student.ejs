<% layout('layout') -%>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand logo" href="#">WELCOME</a>
      </div>
      <ul class="nav navbar-nav">
        <li><a href="/">CREATE STUDENT</a></li>
        <li><a href="/api/student_list">STUDENT LIST</a></li>
      </ul>
    </div>
  </nav>

<div class="wrapper">
    <div class="sidebar" data-color="blue">

    	<div class="sidebar-wrapper">

            <ul class="nav">
                <li>
                    <a href="/">
                        <i class="pe-7s-user"></i>
                        <p>Create Student</p>
                    </a>
                </li>
                <li>
                    <a href="/api/student_list">
                        <i class="pe-7s-note2"></i>
                        <p>Student List</p>
                    </a>
                </li>
            </ul>
    	</div>
    </div>

    <div class="main-panel">

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h4 class="title"><%= view_students.name %> Details</h4>
                            </div>
                            <div class="content">
                                <form>
                                <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Name</label>
                                                <h6><%= view_students.name %></h6>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Faculty</label>
                                                <h6><%= view_students.faculty %></h6>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Department</label>
                                                <h6><%= view_students.department %></h6>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Matric number</label>
                                                <h6><%= view_students.matric_no %></h6>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label> Level </label>
                                                <h6><%= view_students.level %></h6>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>phone</label>
                                                <h6><%= view_students.phone_no %></h6>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Date of Birth</label>
                                                <h6><%= view_students.date_of_birth.toDateString() %></h6>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Gender</label>
                                                <h6><%= view_students.gender %></h6>
                                            </div>
                                        </div>
                                    </div>
                        
                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>


        <footer class="footer">
            <div class="container-fluid">
                <p class="copyright pull-right">
                    &copy; 2017 <a href="#">Dogo Patience</a>, made with love 
                </p>
            </div>
        </footer>

    </div>
</div>

