<% layout('layout') -%>

<div class="wrapper">
    <div class="sidebar" data-color="green" data-image="img/sidebar-5.jpg">


    	<div class="sidebar-wrapper">
            <div class="logo">
                <a href="#" class="simple-text">
                    STUDENT RESOURCE
                </a>
            </div>

            <ul class="nav">
                <li class="active">
                    <a href="Create_Student_profile.html">
                        <i class="pe-7s-user"></i>
                        <p>Create Resource</p>
                    </a>
                </li>
                <li>
                    <a href="Student_list.html">
                        <i class="pe-7s-note2"></i>
                        <p>Student List</p>
                    </a>
                </li>s
            </ul>
    	</div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">View Student Resource</a>
                </div>
                <div class="collapse navbar-collapse">
                </div>
            </div>
        </nav>


        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Edit Profile</h4>
                            </div>
                            <div class="content">
                                <form>
                                <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>First Name</label>
                                                <input type="text" class="form-control" value="<%= posts[i].first_name %>">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Last Name</label>
                                                <input type="text" class="form-control" value="<%= posts[i].Last_name %>">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Department</label>
                                                <input type="text" class="form-control" value="<%= posts[i].department %>">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Matric number</label>
                                                <input type="number" class="form-control" value="<%= posts[i].matric_no %>">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label> Level </label>
                                                <input type="email" class="form-control" value="<%= posts[i].level %>">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>phone</label>
                                                <input type="number" class="form-control" value="<%= posts[i].phone_no %>">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Date of Birth</label>
                                                <input type="date" class="form-control" value="<%= posts[i].date_of_birth %>">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Gender</label>
                                                <input type="text" class="form-control" value="<%= posts[i].gender %>">
                                            </div>
                                        </div>
                                    </div>
                        
                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>


        <footer class="footer">
            <div class="container-fluid">
                <p class="copyright pull-right">
                    &copy; 2017 <a href="#">Dogo Patience</a>, made with love 
                </p>
            </div>
        </footer>

    </div>
</div>

